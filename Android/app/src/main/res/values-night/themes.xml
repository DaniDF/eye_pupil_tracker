<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CameraApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_primary_color</item>
        <item name="colorPrimaryVariant">@color/night_primary_color_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_secondary_color</item>
        <item name="colorSecondaryVariant">@color/night_secondary_color_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="layout_background_tint">@color/grey</item>
        <item name="layout_anti_background_tint">@color/white</item>

        <item name="target_color_primary">?attr/colorSecondary</item>
        <item name="target_color_secondary">?attr/colorPrimary</item>

        <item name="android:windowFullscreen">true</item>

        <item name="button_primary_color">@color/white</item>
        <item name="button_secondary_color">@color/black</item>

        <item name="game_question_background">@color/secondary_color_light</item>
    </style>
</resources>