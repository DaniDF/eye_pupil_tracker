<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.CameraApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/system_accent3_500</item>
        <item name="colorSecondaryVariant">@android:color/system_accent3_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="layout_background_tint">@android:color/system_accent1_900</item>
        <item name="layout_anti_background_tint">@android:color/system_accent1_50</item>

        <item name="target_color_primary">?attr/colorSecondaryVariant</item>
        <item name="target_color_secondary">?attr/colorPrimaryVariant</item>

        <item name="android:windowFullscreen">true</item>

        <item name="button_primary_color">@color/white</item>
        <item name="button_secondary_color">@color/black</item>

        <item name="game_question_background">?attr/colorSecondaryVariant</item>
    </style>
</resources>